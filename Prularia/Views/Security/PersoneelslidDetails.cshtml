@model PersoneelslidAccountViewModel
@{
    ViewData["Title"] = "Details";
}

<h2 class="mt-2 mb-3">Details - @Model.Voornaam @Model.Familienaam</h2>

<table class="table">
    <tbody>
        <tr>
            <td><label asp-for="Id"></label></td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td><label asp-for="Voornaam"></label></td>
            <td>@Model.Voornaam</td>
        </tr>
        <tr>
            <td><label asp-for="Familienaam"></label></td>
            <td>@Model.Familienaam</td>
        </tr>
        <tr>
            <td><label asp-for="Securitygroepen"></label></td>
            <td>@string.Join(",", Model.Securitygroepen.Select(s => s.SecurityGroepId))</td>
        </tr>
        <tr>
            <td><label asp-for="Email"></label></td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td><label asp-for="Disabled">Geblokkeerd</label></td>
            <td>@(Model.Disabled == true ? "ja" : "nee")</td>
        </tr>
    </tbody>
</table>

<a asp-action="GebruikerWijzigen" asp-route-id="@Model.Id"><button class="btn btn-secondary">Wijzigen</button></a>

<form asp-action="PersoneelAccountSetDisabled"
      asp-route-personeelslidAccountId="@Model.Id"
      asp-route-disabled="@(!Model.Disabled)"
      method="post" style="display:inline;">
    <button type="submit" class="btn btn-secondary">
        @(Model.Disabled ? "Activeren" : "Blokkeren")
    </button>
</form>
<a asp-action="Personeelsleden"><button class="btn btn-secondary">Terug</button></a>

