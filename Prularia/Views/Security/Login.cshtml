@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form asp-action="LoginDoorvoeren" asp-controller="Security" method="post" class="form">


    <div class="card text-center text-white bg-primary mb-3" style="max-width: 20rem;">
        <div class="card-header">LOGIN</div>
        <div class="card-body">

            <div class="loginfield">
                <label asp-for="Email"></label>
                <input class="form-text" asp-for="Email" />
            </div>

            <div class="loginfield">
                <label asp-for="Password"></label>
                <input class="form-text"  asp-for="Password" type="password" />
            </div>

        </div>
   
    <button type="submit" class="btn btn-primary">Login</button>
</form>
