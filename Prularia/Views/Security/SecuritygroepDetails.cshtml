@model SecuritygroepDetailsViewModel
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Securitygroep Details";
    string? searchvalue = @HttpContextAccessor.HttpContext?.Session.GetString("searchvalueDetailsSecurity");
}

<h2 class="mb-3 mt-2">Details Securitygroep - @Model.Naam</h2>

<div>
    SecuritygroepId: @Model.Id
</div>


<h3>Gebruikers</h3>

<div class="formContainer mb-3">
    <form class="SearchForm" method="get">
        @{
            <input name="pageSize" value="ViewBag.pageSize" type="hidden" />
            if (searchvalue != null)
            {
                <input name="searchValue" type="text" class="form-control" id="inputSearch" value="@searchvalue">
            }
            else
            {
                <input name="searchValue" type="text" class="form-control" id="inputSearch" placeholder="Vul hier een zoekterm in">
            }
        }
        <select name="sorteer" class="selectOrder form-select" aria-label="selecteer zoek optie">
            <option selected>Selecteer sorteer optie</option>
            <option value="alfabetisch">Alfabetisch</option>
            <option value="geblokkeerd">Status</option>
        </select>
        <button class="btn btn-success">zoeken</button>
    </form>
</div>


<table class="table">
    <thead>
    <th>ID</th>
    <th>Voornaam</th>
    <th>Familienaam</th>
    <th>Email</th>
    <th>SecurityGroepen</th>
    <th>Geblokkeerd</th>
    </thead>
    <tbody>
        @foreach (var gebruiker in Model.Personeelsleden)
        {
            <tr>
                <td>@gebruiker.Id</td>
                <td>@gebruiker.Voornaam</td>
                <td>@gebruiker.Familienaam</td>
                <td>@gebruiker.Email</td>
                <td>@string.Join(",", gebruiker.Securitygroepen.Select(s => s.SecurityGroepId))</td>
                <td>@(gebruiker.Disabled == true ? "ja" : "nee")</td>
                <td>
                    <a asp-action="PersoneelslidDetails" asp-route-id="@gebruiker.Id"
                       class="btn btn-secondary">Details</a>
                </td>
                <td>
                    <form asp-action="PersoneelslidVerwijderenUitSecuritygroep" method="post">
                        <input type="hidden" name="gebruikerId" value="@gebruiker.Id" />
                        <input type="hidden" name="groepId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">X</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="PersoneelslidToevoegen" asp-route-id="@Model.Id"
   class="btn btn-secondary">Gebruiker toevoegen</a>

<a asp-action="Securitygroepen"
   class="btn btn-secondary">Terug</a>

