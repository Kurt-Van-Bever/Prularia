<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prularia</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Prularia.styles.css" asp-append-version="true" />

    <style>
        /* Sidebar styling */
        #sidebar {
            height: 100%; /* Full-height */
            width: 250px; /* Default width */
            position: fixed; /* Stay in place */
            top: 0;
            left: 0;
            background-color: #111; /* Dark background */
            padding-top: 20px;
            overflow-x: hidden; /* Prevent horizontal scroll */
            transition: 0.3s; /* Smooth transition */
        }

        /* Sidebar links */
        #sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

        /* Sidebar link hover */
        #sidebar a:hover {
            color: #f1f1f1;
        }

        /* Close button */
        #sidebar .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
        }

        /* When the sidebar is closed */
        #sidebar.closed {
            width: 0; /* Collapse sidebar width */
            overflow: hidden; /* Ensure that the content is hidden */
        }

        /* Main content */
        .main-content {
            transition: margin-left 0.3s;
            padding: 16px;
            margin-left: 250px; /* Align with sidebar */
        }

        /* When sidebar is closed, main content margin resets */
        .main-content.closed {
            margin-left: 0;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div id="sidebar" class="bg-dark">
        <a href="javascript:void(0)" class="closebtn" onclick="toggleSidebar()">×</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Bestellingen" asp-action="Index">Bestellingen</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Klanten" asp-action="Index">Klanten</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Security" asp-action="Index">Account beheer</a>
    </div>

    <!-- Main content area -->
    <div id="main" class="main-content">
        <!-- Button to open the sidebar -->
        <button class="btn btn-primary" onclick="toggleSidebar()">☰ Navigatie</button>

        <!-- Main content from views will be injected here -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Prularia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript for sidebar toggle -->
    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            var mainContent = document.getElementById("main");
            
            sidebar.classList.toggle("closed");
            mainContent.classList.toggle("closed");
        }
    </script>

    <!-- Scripts for Bootstrap and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
