<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prularia</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Prularia.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <!-- Container for Logo and Sidebar Toggle Button -->
        <div class="d-flex align-items-center">
            <!-- Logo -->
            <div class="logo-container">
                <a href="@Url.Action("Index", "Bestellingen")">
                    <img src="~/images/logo_prularia_transparant.png" alt="Prularia Logo" class="logo" />
                </a>
            </div>

            <!-- Sidebar toggle button (next to logo) -->
            <button class="toggle-button ml-2" onclick="toggleSidebar()">☰</button>
        </div>

        <!-- Account Dropdown Button on the Right -->
        <div class="dropdown">
            <button class="toggle-button dropdown-toggle" type="button" id="accountDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @(Context.Session.GetString("UserName") ?? "niet ingelogd") <!-- Naam van het ingelogde account -->
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdown">
                <!-- Account info zoals e-mail en securitygroepen -->
                <div class="px-3 py-2">
                    <p class="mb-1"><strong>Email:</strong> @(Context.Session.GetString("Email") ?? "niet ingelogd")</p>
                </div>
                <div class="dropdown-divider"></div>
                <!-- Links naar accountbeheer en uitloggen -->
                <a class="dropdown-item btn btn-success" asp-controller="Security" asp-action="Index">Accountbeheer</a>
                <a class="dropdown-item" style="color: red" asp-controller="Security" asp-action="Logout">Uitloggen</a>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <div id="sidebar">
        <div>
            <a class="nav-link text-light" asp-area="" asp-controller="Bestellingen" asp-action="Index">Bestellingen</a>
            <a class="nav-link text-light" asp-area="" asp-controller="Klanten" asp-action="Index">Klanten</a>
            <a class="nav-link text-light" asp-area="" asp-controller="Security" asp-action="AdminPage">Admin</a>
        </div>
    </div>

    <!-- Main content area -->
    <div id="main" class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- JavaScript for sidebar toggle -->
    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            var mainContent = document.getElementById("main");

            sidebar.classList.toggle("closed");
            mainContent.classList.toggle("closed");
        }
    </script>

    <!-- Scripts for Bootstrap and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
