<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prularia</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Prularia.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <!-- Container for Logo and Sidebar Toggle Button -->
        <div class="d-flex align-items-center">
            <!-- Logo -->
            <div class="logo-container">
                <a href="@Url.Action("Index", "Bestellingen")">
                    <img src="~/images/logo_prularia_transparant.png" alt="Prularia Logo" class="logo" />
                </a>
            </div>

            <!-- Sidebar toggle button (next to logo) -->
            <button class="toggle-button ml-2" onclick="toggleSidebar()">☰</button>
        </div>

        <!-- Logout Button on the Right -->
        <div>
            <a asp-controller="Security" asp-action="Logout" class="btn btn-danger">Uitloggen</a>
        </div>
    </header>

    <!-- Sidebar -->
    <div id="sidebar">
        <div>
            <a class="nav-link text-light" asp-area="" asp-controller="Bestellingen" asp-action="Index">Bestellingen</a>
            <a class="nav-link text-light" asp-area="" asp-controller="Klanten" asp-action="Index">Klanten</a>
            <a class="nav-link text-light" asp-area="" asp-controller="Security" asp-action="AdminPage">Admin</a>
            <a class="nav-link text-light" asp-area="" asp-controller="Security" asp-action="Index">Accountbeheer</a>
        </div>
    </div>

    <!-- Main content area -->
    <div id="main" class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- JavaScript for sidebar toggle -->
    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            var mainContent = document.getElementById("main");

            sidebar.classList.toggle("closed");
            mainContent.classList.toggle("closed");
        }
    </script>

    <!-- Scripts for Bootstrap and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
