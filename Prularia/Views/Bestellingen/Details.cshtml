@model BestellingDetailViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Bestelling details</h1>

<div>
    <a asp-action="Wijzigen" asp-route-id="@Model.BestelId" class="btn btn-success">Wijzig</a>
</div>

<table class="table">
     <tbody>
        <tr>
            <td><label asp-for="BestelId"></label></td>
            <td>@Model.BestelId</td>
        </tr>
        <tr>
            <td><label asp-for="Besteldatum"></label></td>
            <td>@Model.Besteldatum</td>
        </tr>
        <tr>
            <td><label asp-for="Betaald"></label></td>
            <td>@Model.Betaald</td>
        </tr>
        @if (!String.IsNullOrEmpty(Model.Betalingscode)){
        <tr>
            <td><label asp-for="Betalingscode"></label></td>
            <td>@Model.Betalingscode</td>
        </tr>
        }
        <tr>
            <td><label asp-for="Annulatie"></label></td>
            <td>@Model.Annulatie</td>
        </tr>
        @if(Model.Annulatie){
        <tr>
            <td><label asp-for="Annulatiedatum"></label></td>
            <td>@Model.Annulatiedatum</td>
        </tr>
        }
        @if (!String.IsNullOrEmpty(Model.Terugbetalingscode)){
        <tr>
            <td><label asp-for="Terugbetalingscode"></label></td>
        <td>@Model.Terugbetalingscode</td>
        </tr>
        }
        <tr>
            <td><label asp-for="ActiecodeGebruikt"></label></td>
            <td>@Model.ActiecodeGebruikt</td>
        </tr>
        @if(!String.IsNullOrEmpty(Model.Bedrijfsnaam)){
        <tr>
            <td><label asp-for="Bedrijfsnaam"></label></td>
            <td>@Model.Bedrijfsnaam</td>
        </tr>
        }
        @if(!String.IsNullOrEmpty(Model.BtwNummer)){
        <tr>
            <td><label asp-for="BtwNummer"></label></td>
            <td>@Model.BtwNummer</td>
        </tr>
        }

        <tr>
            <td><label asp-for="BestellingsStatus"></label></td>
            <td>@Model.BestellingsStatus.Naam</td>
        </tr>
        <tr>
            <td><label asp-for="Betaalwijze"></label></td>
            <td>@Model.Betaalwijze.Naam</td>
        </tr>
        <tr>
            <td><label asp-for="Voornaam"></label></td>
            <td>@Model.Voornaam</td>
        </tr>
        <tr>
            <td><label asp-for="Familienaam"></label></td>
            <td>@Model.Familienaam</td>
        </tr>
        <tr>
            <td><label asp-for="FacturatieAdres"></label></td>
            <td>@Model.FacturatieAdres.Straat  @Model.FacturatieAdres.HuisNummer</td>
        </tr>
        @*<tr>
            <td><label asp-for="Klant"></label></td>
            <td>@Model.Klant</td>
        </tr>*@
        <tr>
            <td><label asp-for="LeveringsAdres"></label></td>
            <td>@Model.LeveringsAdres.Straat @Model.LeveringsAdres.HuisNummer</td>
        </tr>
    </tbody>
</table>

<h2>Bestellijnen</h2>
<table class="table table-striped">
    <thead>
        <th>Id</th>
        <th>Naam</th>
        <th>Prijs</th>
        <th>Aantal</th>
    </thead>
    <tbody>
        @foreach(Bestellijn lijn in Model.Bestellijnen)
        {
            <tr>
                <td>@lijn.BestellijnId</td>
                <td>@lijn.Artikel.Naam</td>
                <td>@lijn.Artikel.Prijs</td>
                <td>@lijn.AantalBesteld</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.BestellingsStatus.Naam == "Lopend" || Model.BestellingsStatus.Naam == "Betaald" && Model.Annulatie == false)
{
    <!-- Button to trigger the popup -->
    <a class="btn btn-success" href="javascript:void(0);" onclick="showModalPopup()">Annuleren</a>
    <!--
        <a href="javascript:void(0);" class="btn btn-info" onclick="showModalPopup()">Annuleren</a>
    -->
}

<a asp-action="Index" class="btn btn-success">Terug</a>

<!-- Modal HTML (using Bootstrap) -->
    <script type="text/javascript">
        function showModalPopup() {
            // Modern way to open a modal popup using Bootstrap
            $('#annulerenModal').modal('show');
        }
    </script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#annulerenModal').on('click', '.btn-secondary', function () {
                $('#annulerenModal').modal('hide');
            });
        });
    </script>
    
    <div class="modal fade" id="annulerenModal" tabindex="-1" role="dialog" aria-labelledby="annulerenModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="annulerenModalLabel">Annuleren Bestelling</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Weet u zeker dat u de bestelling wilt annuleren?
                </div>
                <div class="modal-footer">
                <form asp-action="AnnulerenPopup" method="post">
                    <input type="hidden" name="id" value="@Model.BestelId" />
                    <button type="submit" class="btn btn-danger">Ja</button>
                </form>
                    @* <a asp-action="AnnulerenPopup" asp-route-id="@Model.BestelId" class="btn btn-danger">Ja</a> *@
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Nee</button>
                </div>
            </div>
        </div>
    </div>
