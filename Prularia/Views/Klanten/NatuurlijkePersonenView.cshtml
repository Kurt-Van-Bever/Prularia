@model List<NatuurlijkePersoonViewModel>

<h2>Natuurlijke Personen</h2>

<form asp-action="ToggleKlantType" method="post">
    <input type="hidden" name="huidigType" value="natuurlijk" />
    <button type="submit">Toon Rechtspersonen</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Voornaam</th>
            <th>Achternaam</th>
            <th>Postcode</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var klant in Model)
        {
            <tr>
                <td>@klant.Voornaam</td>
                <td>@klant.Achternaam</td>
                <td>@klant.Postcode</td>
                <td>@klant.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@klant.KlantId">
                        <button class="btn btn-success">Details</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>